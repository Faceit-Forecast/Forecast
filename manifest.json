{
  "manifest_version": 3,
  "name": "FACEIT FORECAST",
  "version": "1.7.8",
  "description": "A convenient extension for detailed statistics on Faceit.",
  "default_locale": "en",
  "author": "TerraMiner",
  "permissions": ["storage"],
  "icons": {
    "128": "src/visual/icons/logo128.png"
  },
  "action": {
    "default_popup": "src/visual/popup.html",
    "default_icon": {
      "128": "src/visual/icons/logo128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  },
  "background": {
    "service_worker": "src/background/worker.js",
    "scripts": ["src/background/worker.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.faceit.com/*"
      ],
      "js": [
        "src/utils/utils.js",
        "src/utils/pagetype.js",
        "src/faceit/api/faceit-api.js",
        "src/faceit/api/forecast-api.js",
        "src/module/observer/observe-handler.js",
        "src/module/module.js",
        "src/faceit/resources/templates.js",
        "src/faceit/resources/resources.js",
        "src/utils/i18n.js",
        "src/faceit/room/matchroom.js",
        "src/faceit/poscatcher/poscatch.js",
        "src/faceit/history/matchhistorycache.js",
        "src/faceit/history/matchroom-popup.js",
        "src/faceit/history/matchhistory.js",
        "src/faceit/ranking/ranking.js",
        "src/faceit/ranking/levels.js",
        "src/faceit/features/logosidebar.js",
        "src/faceit/service/service.js",
        "src/faceit/service/profiles.js",
        "src/faceit/service/integrations.js",
        "src/module/moduleManager.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "_locales/en/forecast.json",
        "_locales/ru/forecast.json",
        "_locales/de/forecast.json",
        "_locales/fr/forecast.json",
        "_locales/uk/forecast.json",
        "_locales/pl/forecast.json",
        "src/visual/icons/logo128.png",
        "src/visual/icons/logo.svg",
        "src/visual/icons/rawlogo.svg",
        "src/visual/icons/mini-logo.svg",
        "src/visual/icons/loading.svg",
        "src/visual/icons/loaded.svg",
        "src/visual/popup.html",
        "src/visual/popup.js",
        "src/visual/popup.styles"
      ],
      "matches": [
        "https://www.faceit.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "forecast-extension@terraminer.com",
      "strict_min_version": "109.0"
    }
  }
}