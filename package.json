{
  "name": "forecast-extension",
  "version": "1.0.0",
  "description": "Build system for Forecast browser extension",
  "scripts": {
    "build": "node build.js",
    "clean": "node -e \"const fs=require('fs');['dist','build'].forEach(d=>fs.existsSync(d)&&fs.rmSync(d,{recursive:true,force:true}))\"",
    "dev": "echo 'Use src/ folder for development'",
    "pack": "npm run build"
  },
  "keywords": ["extension", "build", "minify"],
  "author": "TerraMiner",
  "license": "MIT",
  "devDependencies": {
    "terser": "^5.27.0",
    "archiver": "^6.0.1",
    "sharp": "^0.33.2",
    "html-minifier-terser": "^7.2.0",
    "clean-css": "^5.3.3",
    "svgo": "^3.0.2"
  }
}